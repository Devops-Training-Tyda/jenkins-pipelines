pipeline{
    agent any
    parameters { 
        string(name: 'ARTIFACT_NAME', defaultValue: '', description: 'Unique name of artifact') 
    }
    stages{
        stage("Download Artifact"){
            steps{
                sh """
                    curl --remote-name http://localhost:18081/repository/artifacts/hello/"${ARTIFACT_NAME}".tar.gz
                    ls -la
                """
            }
        }
    }
    post{
        always {  
            cleanWs()
        }
    }
}