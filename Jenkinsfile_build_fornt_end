pipeline{
    agent any
    stages{
         stage("Clone Code"){
            steps{
                git branch: 'master', url: 'https://github.com/Devops-Training-Tyda/ReactJs-Basic.git'            
            }
        }
        stage("Install The Dependency"){
            steps{
                sh "npm install"
            }
        }
        stage("Build the code"){
            steps{
                sh "npm run build"
            }
        }
        stage("create artifact"){
            steps{
                sh "tar -zcvf artifact.tar.gz build"
                sh "ls -la"
            }
        }
    }
    post{
        always {  
            cleanWs()
        }
    }
}