pipeline{
    agent any
    environment {
        myVar = "test"
    }
    stages{
        stage("Build the code"){
            steps {  
                sh """
                    echo "${myvar}" > index.html
                    cat index.html
                    ls -l
                """
            }
        }
    }
    post{
        always {  
            cleanWs()
        }
    }
}