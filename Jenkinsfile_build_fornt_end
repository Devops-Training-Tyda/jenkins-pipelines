def randomIDGet = sh(script: 'uuid', returnStdout: true)

pipeline{
    agent any
    stages{
        stage("Build the code"){
            steps{
                script{
                    echo randomIDGet >> index.html
                    tar -zcvf ${randomIDGet}.tar.gz index.html
                } 
            }
        }
        stage("upload artifact"){
            steps{
                echo randomIDGet
                #curl -v -u admin:admin123 --upload-file index.html http://localhost:8081/repository/artifacts/hello/index.html
            }
        }
    }
    post{
        always {  
            cleanWs()
        }
    }
}