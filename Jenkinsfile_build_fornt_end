pipeline{
    agent any
    environment {
        buildUniqueId = "`uuid`"
    }
    stages{
        stage("Build the code"){
            steps {  
                sh """
                    echo "${buildUniqueId}" > index.html
                    tar -zcvf "${buildUniqueId}".tar index.html
                    cat index.html
                    ls -l
                """N
            }
        }
    }
    post{
        always {  
            cleanWs()
        }
    }
}