pipeline{
    agent any
    stages{
        stage("Build the code"){
            steps {  
                script{
                    myvar="test";
                    echo "$myvar" > index.html
                    # tar -zcvf "$myvar".tar index.html
                    ls -la
                    cat index.html
                } 
            }
        }
    }
    post{
        always {  
            cleanWs()
        }
    }
}