pipeline{
    agent any
    environment {
        buildUniqueId = "`uuid`"
    }
    stages{
        stage("Clone the code"){
            steps{
                git branch: 'master',url: 'https://github.com/Devops-Training-Tyda/ReactJs-Basic.git'            
            }
        }
        stage("Install Dependencies"){
            steps{
                sh "'npm' install --quiet"            
            }
        }
        stage("Build the code"){
            steps {
                sh """
                    npm run build
                    tar -zcvf "${buildUniqueId}".tar build
                    ls -la
                """
            }
        }
    }
    post{
        always {  
            cleanWs()
        }
    }
}