pipeline{
    agent any
    environment {
        buildUniqueId = "`uuid`"
    }
    stages{
        stage("Clone the code"){
            steps{
                git branch: 'master',url: 'https://github.com/Devops-Training-Tyda/ReactJs-Basic.git'            
            }
        }
        stage("Build the code"){
            steps {
                sh """
                    npm install
                    echo "${buildUniqueId}" > index.html
                    tar -zcvf "${buildUniqueId}".tar index.html
                """
            }
        }
    }
    post{
        always {  
            cleanWs()
        }
    }
}